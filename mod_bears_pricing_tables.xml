	</languages>
	<config>
		<fields name="params" addfieldpath="/modules/mod_bears_pricing_tables/elements">

			<fieldset name="MOD_BEARS_GENERALSETTINGS">
				<!-- Template selection dropdown -->
				<field 
					name="bears_template" 
					type="list" 
					default="1" 
					label="Template Style" 
					description="Select the template style for the pricing table">
					<option value="1">1 - Default ( Large Accent )</option> <!-- 1276 -->
					<option value="2">2 - Blue ( Rounded )</option><!-- 1517 -->
					<option value="3">3 - Dark ( Small Accent )</option><!-- 1299 -->
					<option value="4">4 - Purple ( Wedge Accent )</option><!-- 1404 -->
					<option value="5">5 - Orange ( With Icon )</option> <!-- 1265 -->
					<option value="6">6 - Coins ( Blue )</option><!-- 1240 -->
					<option value="7">7 - Offset ( Accent color )</option><!-- 1464 -->
					<option value="8">8 - Burgundy ( Coin Pricing )</option><!-- 1223 -->
					<option value="9">9 - Simple ( Blue on white )</option><!-- 1207 -->
					<option value="10">10 - White ( Black and White )</option><!-- custom -->
					<option value="11">11 - Small ( Small Title )</option><!-- 1214 -->
				</field>
				<field name="bears_num_columns" type="radio" default="3" label="MOD_BEARS_NUMCOLUMNS" description="MOD_BEARS_NUMCOLUMNS_DESC"
					   class="btn-group">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
				</field>
				<field name="bears_column_margin_x" type="textpx" default="20" label="MOD_BEARS_COLUMN_MARGINH" description="MOD_BEARS_COLUMN_MARGINH_DESC" />
				<field name="bears_column_margin_y" type="textpx" default="10" label="MOD_BEARS_COLUMN_MARGINV" description="MOD_BEARS_COLUMN_MARGINV_DESC" />
				<field name="bears_column_bg" type="color" default="#ffffff" label="Background Color" description="Set the column background color" />
				<field name="bears_header_bg" type="color" default="#ffffff" label="Header Background Color" description="Set the column header color" />
				<field name="bears_highlight_bg" type="color" default="#252525" label="Highlight Background Color" description="Set the highlight column header color" />
				<field name="bears_title_color" type="color" default="#252525" label="Title Color" description="Set the title color" />
				<field name="bears_price_color" type="color" default="#424242" label="Price Color" description="Set the price color" />
				<field name="bears_pricesub_color" type="color" default="#5c5c5c" label="Price Sub Color" description="Set the price sub color" />
				<field name="bears_features_color" type="color" default="#424242" label="Features Color" description="Set the features text color" />
				<field name="bears_border_color" type="color" default="transparent" label="Border Color" description="Set the column border color" />
				<field name="bears_highlight_border_color" type="color" default="transparent" label="Highlight Border Color" description="Set the featured column border color" />
				<field name="bears_accent_color" type="color" default="#333333" label="Accent Color" description="Set the accent color for icons and highlights" />
				<field name="bears_highlight_accent_color" type="color" default="#5c5c5c" label="Highlight Accent Color" description="Set the accent color for the featured column" />
				<field name="bears_button_color" type="color" default="#252525" label="Button Color" description="Set the button color" />
			</fieldset>


			<fieldset name="column1">
				<field name="bears_title1" type="text" size="60" default="" label="MOD_BEARS_TITLE" description="MOD_BEARS_TITLE_DESC" />
				<field name="bears_price1" type="text" filter="raw" default="" label="MOD_BEARS_PRICE" description="MOD_BEARS_PRICE_DESC" />
				<field name="bears_subtitle1" type="text" filter="raw" default="" label="MOD_BEARS_SUBTITLE" description="MOD_BEARS_SUBTITLE_DESC" />
				<field name="bears_features1" type="subform" formsource="modules/mod_bears_pricing_tables/elements/feature.xml" class="advancedSelect" min="1" max="20" multiple="true" layout="joomla.form.field.subform.repeatable" groupByFieldset="true" label="Feature(s)" description="Add column feature(s)" />
				<field name="bears_highlight1" type="radio" default="no" label="MOD_BEARS_HIGHLIGHT" description="MOD_BEARS_HIGHLIGHT_DESC"
					   class="btn-group btn-group-yesno">
					<option value="no">JNO</option>
					<option value="yes">JYES</option>
				</field>
				<field name="bears_buttontext1" type="text" default="" label="MOD_BEARS_BUTTONTEXT" description="MOD_BEARS_BUTTONTEXT_DESC" />
				<field name="bears_buttonurl1" type="text" default="" label="MOD_BEARS_BUTTONURL" description="MOD_BEARS_BUTTONURL_DESC" />
			</fieldset>

			<fieldset name="column2">
				<field name="bears_title2" type="text" size="60" default="" label="MOD_BEARS_TITLE" description="MOD_BEARS_TITLE_DESC" />
				<field name="bears_price2" type="text" filter="raw" default="" label="MOD_BEARS_PRICE" description="MOD_BEARS_PRICE_DESC" />
				<field name="bears_subtitle2" type="text" filter="raw" default="" label="MOD_BEARS_SUBTITLE" description="MOD_BEARS_SUBTITLE_DESC" />
				<field name="bears_features2" type="subform" formsource="modules/mod_bears_pricing_tables/elements/feature.xml" class="advancedSelect" min="1" max="20" multiple="true" layout="joomla.form.field.subform.repeatable" groupByFieldset="true" label="Feature(s)" description="Add column feature(s)" />
				<field name="bears_highlight2" type="radio" default="no" label="MOD_BEARS_HIGHLIGHT" description="MOD_BEARS_HIGHLIGHT_DESC"
					   class="btn-group btn-group-yesno">
					<option value="no">JNO</option>
					<option value="yes">JYES</option>
				</field>
				<field name="bears_buttontext2" type="text" default="" label="MOD_BEARS_BUTTONTEXT" description="MOD_BEARS_BUTTONTEXT_DESC" />
				<field name="bears_buttonurl2" type="text" default="" label="MOD_BEARS_BUTTONURL" description="MOD_BEARS_BUTTONURL_DESC" />
			</fieldset>

			<fieldset name="column3">
				<field name="bears_title3" type="text" size="60" default="" label="MOD_BEARS_TITLE" description="MOD_BEARS_TITLE_DESC" />
				<field name="bears_price3" type="text" filter="raw" default="" label="MOD_BEARS_PRICE" description="MOD_BEARS_PRICE_DESC" />
				<field name="bears_subtitle3" type="text" filter="raw" default="" label="MOD_BEARS_SUBTITLE" description="MOD_BEARS_SUBTITLE_DESC" />
				<field name="bears_features3" type="subform" formsource="modules/mod_bears_pricing_tables/elements/feature.xml" class="advancedSelect" min="1" max="20" multiple="true" layout="joomla.form.field.subform.repeatable" groupByFieldset="true" label="Feature(s)" description="Add column feature(s)" />
				<field name="bears_highlight3" type="radio" default="no" label="MOD_BEARS_HIGHLIGHT" description="MOD_BEARS_HIGHLIGHT_DESC"
					   class="btn-group btn-group-yesno">
					<option value="no">JNO</option>
					<option value="yes">JYES</option>
				</field>
				<field name="bears_buttontext3" type="text" default="" label="MOD_BEARS_BUTTONTEXT" description="MOD_BEARS_BUTTONTEXT_DESC" />
				<field name="bears_buttonurl3" type="text" default="" label="MOD_BEARS_BUTTONURL" description="MOD_BEARS_BUTTONURL_DESC" />
			</fieldset>

			<fieldset name="column4">
				<field name="bears_title4" type="text" size="60" default="" label="MOD_BEARS_TITLE" description="MOD_BEARS_TITLE_DESC" />
				<field name="bears_price4" type="text" filter="raw" default="" label="MOD_BEARS_PRICE" description="MOD_BEARS_PRICE_DESC" />
				<field name="bears_subtitle4" type="text" filter="raw" default="" label="MOD_BEARS_SUBTITLE" description="MOD_BEARS_SUBTITLE_DESC" />
				<field name="bears_features4" type="subform" formsource="modules/mod_bears_pricing_tables/elements/feature.xml" class="advancedSelect" min="1" max="20" multiple="true" layout="joomla.form.field.subform.repeatable" groupByFieldset="true" label="Feature(s)" description="Add column feature(s)" />
				<field name="bears_highlight4" type="radio" default="no" label="MOD_BEARS_HIGHLIGHT" description="MOD_BEARS_HIGHLIGHT_DESC"
					   class="btn-group btn-group-yesno">
					<option value="no">JNO</option>
					<option value="yes">JYES</option>
				</field>
				<field name="bears_buttontext4" type="text" default="" label="MOD_BEARS_BUTTONTEXT" description="MOD_BEARS_BUTTONTEXT_DESC" />
				<field name="bears_buttonurl4" type="text" default="" label="MOD_BEARS_BUTTONURL" description="MOD_BEARS_BUTTONURL_DESC" />
			</fieldset>

			<fieldset name="advanced">
				<field
						name="load_stylesheet"
						type="radio"
						default="1"
						label="Load Module CSS"
						description="Choose whether to load the module's CSS stylesheet"
						class="btn-group btn-group-yesno">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
						name="layout"
						type="modulelayout"
						label="JFIELD_ALT_LAYOUT_LABEL"
						description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
						name="cache"
						type="list"
						default="1"
						label="COM_MODULES_FIELD_CACHING_LABEL"
						description="COM_MODULES_FIELD_CACHING_DESC">
					<option
							value="1">JGLOBAL_USE_GLOBAL</option>
					<option
							value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
						name="cache_time"
						type="text"
						default="900"
						label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
						description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
						name="cachemode"
						type="hidden"
						default="static">
					<option
							value="static">
					</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
